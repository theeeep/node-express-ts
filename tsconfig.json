{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipDefaultLibCheck": true
  },
  "include": ["./*.js", "src/**/*.ts", "tests/**/*.ts"]
}
